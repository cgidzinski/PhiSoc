<!doctype html>

<head>
    <title>PHI | Showcase</title>
    <%= include /partials/header.ejs %>
</head>

<body class="main">
    <div class="title">
        <h1>Showcase</h1>
        <p>PHI Happenings!</p>
    </div>
    <div class="content">
        <div class="uk-grid" data-uk-grid-margin>
            <div class="uk-width-1-1">
                <li class="uk-active">
                    <div class="uk-grid" data-uk-grid-margin>
                        <% for(var i=0; i<showcase.length; i++) { %>
                            <div class="uk-width-medium-1-3">
                                <div class="uk-thumbnail uk-overlay-hover" data-uk-modal="{target:'#modal-<%= i %>'}">
                                    <figure class="uk-overlay"> <img width="600" height="400" src="<%= showcase[i].img %>" alt="">
                                        <figcaption class="uk-overlay-panel uk-overlay-icon uk-overlay-background uk-overlay-fade"></figcaption>
                                        <a class="uk-position-cover" href="#"></a>
                                    </figure>
                                </div>
                                <div id="modal-<%= i %>" class="uk-modal">
                                    <div class="uk-modal-dialog uk-modal-dialog-lightbox uk-modal-dialog-large">
                                        <a href="" class="uk-modal-close uk-close uk-close-alt"></a> <img src="<%= showcase[i].img %>" width="100%" height="100%" alt="">
                                        <h2><%= showcase[i].title %>
                                            <%= showcase[i].date %></h2>
                                        <p>
                                            <%= showcase[i].body %>
                                        </p>
                                        <% if ( (!!user)&&(user.local.permissions.indexOf("Admin") != -1) ) { %> <a href="/delshowcase/<%= showcase[i]._id %>">Delete Post</a>
                                            <% } %>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </li>
            </div>
        </div>
    </div>
</body>
<%= include /partials/footer.ejs %>

    </html>
