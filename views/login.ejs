<!doctype html>
<html class="uk-height-1-1">
<%= include /partials/imports.ejs %>

    <head>
        <title>Xen Delta | Login</title>
    </head>
    <% if (message.length > 0) { %>
        <div class="uk-alert uk-alert-danger">
            <%= message %>
        </div>
        <% } %>

            <body class="uk-height-1-1">
                <div class="uk-vertical-align uk-text-center uk-height-1-1">
                    <div class="uk-vertical-align-middle" style="width: 250px;"> <img class="uk-margin-bottom" width="140" height="120" src="/assets/logo.png" alt="">
                        <form class="uk-panel uk-panel-box uk-form" action="/login" method="post">
                            <div class="uk-form-row">
                                <input class="uk-width-1-1 uk-form-large" type="text" placeholder="Email" name="email" required="true"> </div>
                            <div class="uk-form-row uk-form-password">
                                <input type="password" class="uk-width-1-1 uk-form-large" name="password" placeholder="Password" required="true"> <a href="" class="uk-form-password-toggle" data-uk-form-password>Show</a> </div>
                            <div class="uk-form-row">
                                <button type="submit" class="uk-width-1-1 uk-button-primary uk-button-large">Login</button>
                            </div>
                            <div class="uk-form-row uk-text-small">
                        </form>
                        <p>Need an account? <a href="/signup">Signup</a></p><i class="uk-icon-large uk-icon-cog"></i>
                        </div>
                    </div>
            </body>
            <%= include /partials/footer.ejs %>

</html>
